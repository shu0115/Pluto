
<label class="label"><%= t("activerecord.attributes.task.title", :default => t("activerecord.labels.title", :default => "Title")) %>:</label>
<p><%= @task.title %></p>

<label class="label"><%= t("activerecord.attributes.task.span", :default => t("activerecord.labels.span", :default => "Span")) %>:</label>
<p><%= @task.span %></p>

<label class="label"><%= t("activerecord.attributes.task.priority", :default => t("activerecord.labels.priority", :default => "Priority")) %>:</label>
<p><%= @task.priority %></p>

<label class="label"><%= t("activerecord.attributes.task.added_at", :default => t("activerecord.labels.added_at", :default => "Added at")) %>:</label>
<p><%= @task.added_at %></p>

<label class="label"><%= t("activerecord.attributes.task.completed_at", :default => t("activerecord.labels.completed_at", :default => "Completed at")) %>:</label>
<p><%= @task.completed_at %></p>

<div class="form-actions">
<%= link_to "Back", tasks_path, :class => 'btn'  %>
<%= link_to "Edit", edit_task_path(@task), :class => 'btn' %>
<%= link_to "Delete", task_path(@task), :method => "delete", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}", :class => 'btn' %>
</div>
