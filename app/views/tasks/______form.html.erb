
<div class="clearfix">
   <%= f.label :title, t("activerecord.attributes.task.title", :default => "Title"), :class => :label %>
  <div class="input">
    <%= f.text_field :title, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :span, t("activerecord.attributes.task.span", :default => "Span"), :class => :label %>
  <div class="input">
    <%= f.text_field :span, :class => 'text_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :priority, t("activerecord.attributes.task.priority", :default => "Priority"), :class => :label %>
  <div class="input">
    <%= f.number_field :priority, :class => 'number_field' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :added_at, t("activerecord.attributes.task.added_at", :default => "Added at"), :class => :label %>
  <div class="input">
    <%= f.datetime_select :added_at, :class => 'datetime_select' %>
  </div>
</div>

<div class="clearfix">
   <%= f.label :completed_at, t("activerecord.attributes.task.completed_at", :default => "Completed at"), :class => :label %>
  <div class="input">
    <%= f.datetime_select :completed_at, :class => 'datetime_select' %>
  </div>
</div>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> or
	<%= link_to "Cancel", tasks_path %>
</div>
